{
  "name": "@asurgent/ui",
  "version": "1.13.103",
  "description": "frontend - asurgent UI components",
  "scripts": {
    "start": "start-storybook -p 6006",
    "watch": "webpack --watch --mode production",
    "build": "webpack --mode production",
    "test": "jest --watch --projects jest-eslint.config.js",
    "test:all": "jest --projects jest.config.js",
    "test:test": "jest --verbose --projects jest-test.config.js",
    "ci-test": "jest --projects jest-eslint.config.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "patch": "git pull && npm run build && git add dist/ && git commit -m 'patch-version' && npm version patch && git push && git push --tags && npm publish && npm run deploy-storybook",
    "minor": "git pull && npm run build && git add dist/ && git commit -m 'minor-version' && npm version minor && git push && git push --tags && npm publish && npm run deploy-storybook",
    "copy": "npm run build && cp ./dist/index.js ./../cloudops-portal/node_modules/@asurgent/ui/dist/ && git checkout ./dist/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/asurgent/ui.git"
  },
  "main": "dist/index.js",
  "keywords": [
    "ui",
    "components",
    "layout"
  ],
  "author": "@hellotheremike",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asurgent/ui/issues"
  },
  "homepage": "https://github.com/asurgent/ui#readme",
  "devDependencies": {
    "@asurgent/eslint-config-asurgent": "^1.1.6",
